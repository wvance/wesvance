		<% if current_page?(root_path()) || current_page?(controller: '/welcome', action: 'index') %>
		<%else%>
			<header>
				<div class="row">
					<div class="col-xs-5 col-sm-5 col-md-4 col-lg-3 center">
						<%= link_to index_path() do %>
							<h1>Wes<span class="yellow">Vance</span></h1>
						<%end%>
						<h6 class="childElement">
							<%= link_to "https://twitter.com/WesAdvance", :target => "_blank" do %>
								@WesAdvance
							<% end %>
						</h6>
					</div>
					<div class="col-xs-5 col-xs-offset-0 col-sm-5 col-sm-offset-1 col-md-5 col-lg-6">
						<!-- IF ADMIN, DISPLAY NEW POST FORM: ELSE DISPLAY ABOUT ME -->
						<% if admin_signed_in?%>
							<div class="adminBar right">
						  	<h4>
						  		<%= link_to(:controller => "posts", :action => "new" ) do%>
										<i class="fa fa-pencil-square-o fa-2x icon"></i>
									<%end%> 
									<%= link_to(:controller => "posts", :action => "index" ) do%>
										<i class="fa fa-file-o fa-2x icon"></i>
									<%end%> 
									<%= link_to(:controller => "post_attachments", :action => "new" ) do%>
										<i class="fa fa-picture-o fa-2x icon"></i>
									<%end%> 
									<%= link_to(createTweet_path, :method => :post) do%>
										<i class="fa fa-retweet fa-2x icon"></i>
									<%end%>
						  		<%= link_to(destroy_admin_session_path, :method => :delete) do%>
						  			<i class="fa fa-user-times fa-2x icon"></i>
						  		<%end%>
						  	</h4>
						  </div>
						<% end %>
					</div>
				</div>
			</header>
		<%end%>

		<% flash.each do |key, value| %>
		  <div class="alert alert-<%= key %> center"><%= value %></div>
		<% end %>
		      
		<div id="top" class="bodyWrapper">
			<%= yield %>
		</div>
		
		<!-- FALLBACK DIV -->
		<div class="footer">
			<footer>
				<div class="row" id="connect">
					<div class="col-xs-12">
						<h4 class="center links">
							<%= link_to "https://twitter.com/WesAdvance", :target => "_blank" do %>
								<i class="fa fa-twitter"></i>
							<% end %> | 
							<%= link_to "https://www.linkedin.com/in/wesvance", :target => "_blank" do %>
								<i class="fa fa-linkedin"></i>
							<% end %> | 
							<%= link_to "https://www.facebook.com/wesley.vance32", :target => "_blank" do %>
								<i class="fa fa-facebook"></i>
							<% end %> | 
							<%= link_to "https://github.com/wvance", :target => "_blank" do %>
								<i class="fa fa-github"></i>
							<% end %> | 
							<%= link_to asset_path("Docs/StartupResume-Raleway.pdf"), :target => "_blank" do %>
								<i class="fa fa-file-text-o"></i>
							<% end %> 
						</h4>
						<h6 class="center">Made with love in <a href="http://rubyonrails.org" target="_blank"><span class="ruby">RoR</span></a> by <a href="mailto:wesley.vance@mac.com?Subject=Hello my name is: " target="_top"><span class="yellow">Wesley Vance</span></a></h6>
					</div>
				</div>
			</footer>
		</div>

		<div class="topBottonBox">
			<a href="#top"><i class="fa fa-chevron-up pull-right topButton"></i></a>
		</div>

	</body>
</html>
