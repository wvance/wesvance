<!DOCTYPE html>
<html>
	<!-- MAPBOX -->
	<script src='https://api.tiles.mapbox.com/mapbox.js/v2.2.1/mapbox.js'></script>
	<link href='https://api.tiles.mapbox.com/mapbox.js/v2.2.1/mapbox.css' rel='stylesheet' />

	<head>
	  <title>Wesley Vance | @WesAdvance</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <meta name="viewport" content="width=device-width, initial-scale=1">
	  <%= csrf_meta_tags %>
	</head>
	
	<script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	  ga('create', 'UA-46307016-5', 'auto');
	  ga('send', 'pageview');

	</script>

	<body class="<%= controller_name %> <%= action_name %>">
		<% if current_page?(root_path()) || current_page?(controller: '/welcome', action: 'index') %>
		<%else%>
			<header>
				<div class="row">
					<div class="col-xs-6 col-sm-5 col-md-4 col-lg-3 center">
						<%= link_to index_path() do %>
							<h1>Wes<span class="yellow">Vance</span></h1>
						<%end%>
						<h6 class="childElement">
							<%= link_to "https://twitter.com/WesAdvance", :target => "_blank" do %>
								@WesAdvance
							<% end %>
						</h6>
					</div>
				</div>
			</header>
		<%end%>

		<% flash.each do |key, value| %>
		  <div class="alert alert-<%= key %> center"><%= value %></div>
		<% end %>
		      
		<div class="bodyWrapper">
			<%= yield %>
		</div>
		
		<!-- FALLBACK DIV -->
		<div>
			<footer>
				<div class="row" id="connect">
					<div class="col-xs-12">
						<h4 class="center links">
							<%= link_to "https://twitter.com/WesAdvance", :target => "_blank" do %>
								<i class="fa fa-twitter"></i>
							<% end %> | 
							<%= link_to "https://www.linkedin.com/in/wesvance", :target => "_blank" do %>
								<i class="fa fa-linkedin"></i>
							<% end %> | 
							<%= link_to "https://www.facebook.com/wesley.vance32", :target => "_blank" do %>
								<i class="fa fa-facebook"></i>
							<% end %> | 
							<%= link_to "https://github.com/wvance", :target => "_blank" do %>
								<i class="fa fa-github"></i>
							<% end %> | 
							<%= link_to asset_path("Docs/StartupResume.pdf"), :target => "_blank" do %>
								<i class="fa fa-file-text-o"></i>
							<% end %> 
						</h4>
						<h6 class="center">Made with love in <a href="http://rubyonrails.org" target="_blank"><span class="ruby">RoR</span></a> by <a href="mailto:wesley.vance@mac.com?Subject=Hello my name is: " target="_top"><span class="yellow">Wesley Vance</span></a></h6>
					</div>
				</div>
			</footer>
		</div>

		<div class="topBottonBox">
			<% if current_page?(root_path()) %>
				<a href="#top"><i class="fa fa-chevron-up pull-right topButton"></i></a>
			<% else %>
				<%= link_to root_path() do %>
					<i class="fa fa-chevron-up pull-right topButton"></i>
				<%end%>
			<%end%>
		</div>

	</body>
</html>
