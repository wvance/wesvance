<div class="row">
	<!-- MAP -->
	<div class="col-sm-12">
		<div id="map" class="mapSection">
			<iframe width='100%' height='500px' frameBorder='0' src='https://a.tiles.mapbox.com/v4/wesvance.miaef27b/attribution.html?access_token=pk.eyJ1Ijoid2VzdmFuY2UiLCJhIjoiV3RpaE1xNCJ9.t3DpzGpN43q23tRcKMzLqQ'></iframe>
		</div>
	</div>
</div>

<div class="row">
	<!-- BLOG -->
	<div class="col-sm-8 col-sm-offset-2">
		<% if @posts.count > 0 %>
			<% @posts.each do |post| %>
				<% if post.is_active %>
				<div id="blog" class="blogSection">
					<div class="blogTitle">
						<h1><%= post.title %></h1>
					</div>
					<div class="blogTags">
						<h6 class="childElement"><%= post.date %></h6>
						<h6 class="childElement"><%= post.ip %></h6>
					</div>
					<div class="blogBody">
						<p><%=post.body.html_safe%></p>
					</div>
					<hr>
				</div>
				<%end%>
			<%end%>
		<%end%>
		<div class="pagFooter">
			<h4><%= paginate @posts %></h4>
			<!-- <%= page_entries_info @posts %> -->
		</div>
	</div>
</div>

