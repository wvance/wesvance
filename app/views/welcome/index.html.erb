	<!-- LEFT SIDE NAV BAR -->
	<div class="col-sm-5 col-md-4 col-lg-3 center">
		<div class="sideBarSection">
			<div class="profile">
				<div class="profileName">
					<%= image_tag "profilePic.jpg", :class=>"profileImg img-circle"%>
					<h1>Wes<span class="yellow">Vance</span></h1>
					<h6 class="childElement"><a href="https://twitter.com/WesAdvance">@WesAdvance</a></h6>
				</div> <!-- KEEP THIS AT THE TOP LEFT CORNER -->
			</div>
			<hr class="navBreak">
			<div class="navBarLinks">
				<ul class="links">
					<li>
						<h3><a href="#about">About Me</a></h3>
					</li>
					<!-- <li>
						<h3><a href="#projects">Projects</a></h3>
					</li> -->
					<li>
						<h3><a href="#map">Blog</a></h3>
					</li>
					<% if admin_signed_in?%>
						<li>
							<h3><a href="#create">Create</a></h3>
						</li>
					<%end%>
				</ul>
			</div>
		</div>
	</div>
	
	<!-- ABOUT ME -->
	<div class="col-sm-5 col-sm-offset-1 col-md-5 col-lg-6">
		<!-- IF ADMIN, DISPLAY NEW POST FORM: ELSE DISPLAY ABOUT ME -->
		<% if admin_signed_in?%>
			<%= form_for(@post) do |f| %>
			  <% if @post.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

			      <ul>
			      <% @post.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>
			  
			  <div class="row newPostSection" id="create">
			    <div class="col-sm-12">
			    	<h1>Create</h1>
			    	<div class="row">
				    	<div class="col-sm-6 form-group">
					      <div class="field">
					        <!-- <%= f.label :title %><br> -->
					        <%= f.text_field :title, class: "form-control", placeholder:"Post Title" %>
					      </div>
				      </div>				      
				    </div>			  			     	    
			      <div class="row">
				      <div class="col-sm-12 form-group">
					      <div class="field">
					        <!-- <%= f.label :body %><br> -->
					        <%= f.text_area :body, class: "form-control", rows: "10", placeholder:"Insert post body here in HTML"%>
					      </div>
				      </div>
			      </div>
			      <div class="row">
			      	<div class="col-sm-12 form-group">
			      		<div class="field">
					        <div class="checkbox">
						        <label>
						          <%= f.check_box :is_active %> Active
						        </label>
						      </div>
									
									<%= f.submit "Submit", class: "btn btn-default"%>						      	
				      	</div>					     				    
			      	</div>	
		      	</div>
			    </div>
			    <!-- PUT LINK TO ALL POSTS HERE -->
			  </div>
			<% end %>

		<% else %>
			<div id="about" class="aboutMeSection">
				<hr>
					<h3>
						Senior studying Computer Science at Texas A&M University. Focus on small business and entrepreneurship through the development of <span class="yellow">Rails & Meteor.js</span> applicaitons. Currently developing custom ServiceNow application at Genworth Financial in Raleigh, NC.
					</h3>
				<hr>
			</div>
		<% end %>

	</div>
</div>
