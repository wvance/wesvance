<p id="notice"><%= notice %></p>

<h1>Listing Post Attachments</h1>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

    <table class="table table-striped"> 
      <thead>
        <tr>
          <th>Post</th>
          <th>Image</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @post_attachments.each do |post_attachment| %>
          <tr>
            <td><%= post_attachment.post_id %></td>
            <td><%= post_attachment.image %></td>
            <td><%= link_to 'Show', post_attachment %></td>
            <td><%= link_to 'Edit', edit_post_attachment_path(post_attachment) %></td>
            <td><%= link_to 'Destroy', post_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Post attachment', new_post_attachment_path %>
