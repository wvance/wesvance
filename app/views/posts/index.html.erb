<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <h1>All Posts</h1>

    <table class="table table-striped"> 
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Body</th>
          <th>Active</th>
          <th>Date</th>
          <th>Comments</th>
          <th>Rating</th>
          <th>IP</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.author %></td>
            <td><%= truncate post.body, length: 125%></td>
            <td><%= post.is_active %></td>
            <td><%= formatDate(post.date) %></td>
            <td><%= post.is_comments %></td>
            <td><%= post.rating %></td>
            <td><%= post.ip %></td>
            <td><%= truncate post.latitude, length: 10%></td>
            <td><%= truncate post.longitude, length: 10%></td>
            <td><%= link_to 'Show', post, :class=> "btn btn-default"%></td>
            <td><%= link_to 'Edit', edit_post_path(post), :class=> "btn btn-default" %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<div class="row">
  <div class="col-xs-12 center">
    <%= link_to 'New Post', index_path %>
  </div>
</div>
