<!-- Title -->
<hr>
<div class="displayPost">
  <div class="row">

    <div class="row">
      <div class="col-xs-offset-2 col-xs-8 col-md-offset-1 col-md-10">
        <h1 class="inline postTitle"><span class="yellow"><%= @post.title %> </span></h1>
        <% if admin_signed_in?%>
          <h6 class="inline">            
            <%= link_to 'All', posts_path %> |
            <%= link_to 'Edit', edit_post_path(@post) %> | 
            <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }%>
          </h6>
        <%end%>
        <div class="blogTags">
          <h5 class="childElement"><%= formatDate(@post.date) %> 
            <% if @post.city.present? || @post.state.present?%> 
              in <%= @post.city%>, <%= @post.state%>
            <%end%>
          </h5>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-6">
        <p>
          <%= markdown(@post.body).html_safe %>
        </p>
      </div>
      <div class="col-xs-offset-1 col-xs-10 col-sm-3 mobileHide">
        <%= link_to @post.image_url, :target => "_blank" do %>
          <%= image_tag(@post.image_url, :class => "postImage") if @post.image.present? %>
        <%end%>
      </div>
    </div>
  </div>
</div>