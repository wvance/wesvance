<!-- Title -->
<div class="displayPost">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <div id="blog" class="blogSection">
        <div class="blogTitle links">
          <h1 class="inline postTitle"><span class="yellow"><%= @post.title %> </span></h1>
          <% if admin_signed_in?%>
            <h6 class="inline">            
              <%= link_to 'All', posts_path %> |
              <%= link_to 'Edit', edit_post_path(@post) %> | 
              <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }%>
            </h6>
          <%end%>
        </div>
        <div class="blogTags">
          <h5 class="childElement"><%= formatDate(@post.date) %> 
            <% if @post.city.present? || @post.state.present?%> 
              in <%= @post.city%>, <%= @post.state%>
            <%end%>
          </h5>
        </div>
        <div class="postContent">
          <p class="postContent"><%= markdown(@post.body).html_safe %></p>
        </div>
        <hr>
        <h5 class="right"><%= @post.author %></h5>
      </div>
    </div>
  </div>
</div>
