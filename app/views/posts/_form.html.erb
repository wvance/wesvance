<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-sm-12">
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :author %><br>
        <%= f.text_field :author %>
      </div>
      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body %>
      </div>
      <div class="field">
        <%= f.label :is_active %><br>
        <%= f.check_box :is_active %>
      </div>
      <div class="field">
        <%= f.label :date %><br>
        <%= f.datetime_select :date %>
      </div>
      <div class="field">
        <%= f.label :is_comments %><br>
        <%= f.check_box :is_comments %>
      </div>
      <div class="field">
        <%= f.label :rating %><br>
        <%= f.number_field :rating %>
      </div>
      <div class="field">
        <%= f.label :ip %><br>
        <%= f.text_field :ip %>
      </div>
      <div class="field">
        <%= f.label :latitude %><br>
        <%= f.text_field :latitude %>
      </div>
      <div class="field">
        <%= f.label :longitude %><br>
        <%= f.text_field :longitude %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>

<% end %>
