<p id="notice"><%= notice %></p>

<h1>Listing Content Attachments</h1>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

    <table class="table table-striped"> 
      <thead>
        <tr>
          <th>Post</th>
          <th>Image</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @content_attachments.each do |content_attachment| %>
          <tr>
            <td><%= content_attachment.content_id %></td>
            <td><%= content_attachment.image %></td>
            <td><%= link_to 'Show', content_attachment %></td>
            <td><%= link_to 'Edit', edit_content_attachment_path(content_attachment) %></td>
            <td><%= link_to 'Destroy', content_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

